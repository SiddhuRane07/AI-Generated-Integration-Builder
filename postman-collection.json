  "item": [
    {
      "name": "Configuration Management",
      "item": [
        {
          "name": "Get All Configurations",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/configurations",
              "host": ["{{baseUrl}}"],
              "path": ["configurations"]
            }
          }
        },
        {
          "name": "Get Active Configurations",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/configurations/active",
              "host": ["{{baseUrl}}"],
              "path": ["configurations", "active"]
            }
          }
        },
        {
          "name": "Get Configuration by System",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/configurations/calendly",
              "host": ["{{baseUrl}}"],
              "path": ["configurations", "calendly"]
            }
          }
