        {
          "name": "Create/Update Configuration",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"systemName\": \"test-system\",\n  \"apiUrl\": \"https://jsonplaceholder.typicode.com/users\",\n  \"httpMethod\": \"GET\",\n  \"headers\": \"{}\",\n  \"queryParams\": \"{}\",\n  \"requestBody\": \"\",\n  \"fieldMappings\": \"{\\\"id\\\":\\\"externalId\\\",\\\"name\\\":\\\"name\\\",\\\"email\\\":\\\"email\\\",\\\"phone\\\":\\\"phoneNumber\\\"}\",\n  \"dataPath\": \"\",\n  \"active\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/configurations",
              "host": ["{{baseUrl}}"],
              "path": ["configurations"]
            }
          }
        },
        {
          "name": "Update Calendly Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"id\": 1,\n  \"systemName\": \"calendly\",\n  \"apiUrl\": \"https://api.calendly.com/users/me\",\n  \"httpMethod\": \"GET\",\n  \"headers\": \"{\\\"Authorization\\\":\\\"Bearer YOUR_CALENDLY_TOKEN\\\",\\\"Content-Type\\\":\\\"application/json\\\"}\",\n  \"queryParams\": \"{}\",\n  \"requestBody\": \"\",\n  \"fieldMappings\": \"{\\\"uri\\\":\\\"externalId\\\",\\\"name\\\":\\\"name\\\",\\\"email\\\":\\\"email\\\",\\\"timezone\\\":\\\"timezone\\\",\\\"avatar_url\\\":\\\"avatarUrl\\\",\\\"scheduling_url\\\":\\\"schedulingUrl\\\"}\",\n  \"dataPath\": \"resource\",\n  \"active\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/configurations",
              "host": ["{{baseUrl}}"],
              "path": ["configurations"]
            }
          }
        },
        {
          "name": "Delete Configuration",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/configurations/1",
              "host": ["{{baseUrl}}"],
              "path": ["configurations", "1"]
            }
          }
        }
      ]
    },
